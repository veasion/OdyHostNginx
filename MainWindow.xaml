                                            </DockPanel>
                                            <DockPanel DockPanel.Dock="Right" Width="80">
                                                <Image Width="80" Source="pack://siteoforigin:,,,/bin/images/close.png" Cursor="Hand" Margin="0,6,0,0"/>
