<Window x:Name="OdyHostNginx" x:Class="OdyHostNginx.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OdyHostNginx"
        mc:Ignorable="d"
        Title="OdyHostNginx" Height="528.504" Width="804.206" WindowStartupLocation="CenterScreen" Closing="OdyHostNginx_Closing">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ui/ScrollViewDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <DockPanel>
            <DockPanel DockPanel.Dock="Top">
                <Menu Name="FileMenu" BorderThickness="0" FontSize="12" Foreground="Black" Height="20" Margin="0,0,0,0" VerticalAlignment="Top" Background="#FFF0F0F0">
                    <MenuItem Header="File" FontSize="14" Width="40" MaxWidth="40">
                        <MenuItem x:Name="Reload" Click="Reload_Click" Header="Reload" FontSize="12" Background="White" Foreground="Black"/>
                        <MenuItem x:Name="Import" Click="Import_Click" Header="Import" FontSize="12" Background="White" Foreground="Black"/>
                        <MenuItem x:Name="Export" Click="Export_Click" Header="Export" FontSize="12" Background="White" Foreground="Black"/>
                        <MenuItem x:Name="Reset" Click="Reset_Click" Header="Reset" FontSize="12" Background="White" Foreground="Black"/>
                        <MenuItem x:Name="About" Click="About_Click" Header="About" FontSize="12" Background="White" Foreground="Black"/>
                    </MenuItem>
                    <MenuItem Header="Edit" FontSize="14" Width="40" MaxWidth="40">
                        <MenuItem x:Name="HostConfig" Click="HostConfig_Click" Header="Host Config" FontSize="12" Background="White" Foreground="Black"/>
                        <MenuItem x:Name="NginxConfig" Click="NginxConfig_Click" Header="Nginx Config" FontSize="12" Background="White" Foreground="Black"/>
                        <MenuItem x:Name="UserConfig" Click="UserConfig_Click" Header="User Config" FontSize="12" Background="White" Foreground="Black"/>
                    </MenuItem>
                    <MenuItem Header="View" FontSize="14" Width="40" MaxWidth="40">
                        <!-- 文件夹 -->
                        <MenuItem x:Name="Explorer" Click="Explorer_Click" Header="Show in Explorer" FontSize="12" Background="White" Foreground="Black"/>
                    </MenuItem>
                    <MenuItem Header="Tools" FontSize="14" Width="46">
                        <!-- Trace -->
                        <MenuItem x:Name="Trace" Header="Trace Info" FontSize="12" Background="White" Foreground="Black"/>
                        <!-- 抓包 -->
                        <MenuItem x:Name="HttpPacket" Header="Http Packet" FontSize="12" Background="White" Foreground="Black"/>
                    </MenuItem>
                    <MenuItem Header="Help" FontSize="14" Width="40" MaxWidth="40">
                        <!-- 钉钉 -->
                        <MenuItem x:Name="DingTalk" Header="DingTalk" FontSize="12" Background="White" Foreground="Black"/>
                    </MenuItem>
                </Menu>
            </DockPanel>
            <DockPanel DockPanel.Dock="Left" Width="220" Background="#FF373D47">
                <DockPanel>
                    <DockPanel DockPanel.Dock="Top" Height="50" Background="#FF373D47">
                        <!-- 总开关 -->
                        <DockPanel>
                            <DockPanel DockPanel.Dock="Left" Width="130">
                                <DockPanel>
                                    <DockPanel DockPanel.Dock="Left" Width="45">
                                        <Image Width="16" Source="pack://siteoforigin:,,,/bin/images/computer.png"/>
                                    </DockPanel>
                                    <DockPanel DockPanel.Dock="Left">
                                        <Label Content="总开关" FontSize="20" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                    </DockPanel>
                                </DockPanel>
                            </DockPanel>
                            <DockPanel DockPanel.Dock="Right">
                                <DockPanel>
                                    <DockPanel DockPanel.Dock="Left">
                                        <Image x:Name="odyHostNginxBut" Width="Auto" MouseLeftButtonUp="OdyHostNginxBut_MouseLeftButtonUp" ToolTip="Open OdyHostNginx" Source="pack://siteoforigin:,,,/bin/images/close.png" Cursor="Hand" Margin="0,6,0,0"/>
                                    </DockPanel>
                                    <DockPanel DockPanel.Dock="Left" Width="10" />
                                </DockPanel>
                            </DockPanel>
                        </DockPanel>
                    </DockPanel>
                    <DockPanel DockPanel.Dock="Bottom">
                        <ScrollViewer Grid.Column="1" Template="{StaticResource MyScrollViewer}" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled">
                            <StackPanel x:Name="ProjectSwitch" Orientation="Vertical">
                                <!-- 动态项目开关 -->
                                <!--
